{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "conjurer",
  "version": "0.1.0",
  "identifier": "com.anubhavitis.conjurer",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "conjurer-app",
        "transparent": true,
        "decorations": false,
        "width": 600,
        "height": 300,
        "visible": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}